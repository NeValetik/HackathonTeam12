{
    "manifest_version": 3,
    "name": "TermView Extension",
    "description": "TermView Extension - the best solution for any issue",
    "version": "1.0",
    "author": "Team 12",
    "action": {
        "default_popup": "html/popup.html",
        "default_icon": "html/logo.png"
    },
    "icons": {
        "16": "html/logo.png",
        "32": "html/logo.png",
        "48": "html/logo.png",
        "128": "html/logo.png"
    },
    "content_scripts": [
        {
            "js": [
                "js/content.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "storage",
        "alarms",
        "notifications"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "commands": {
        "pin-current-tab": {
          "suggested_key": {
            "default": "Ctrl+Shift+K",
            "mac": "Command+Shift+K"
          },
          "description": "Find the comparison"
        }
    }
}